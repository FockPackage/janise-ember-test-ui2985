{{#if (or logo image sidebar)}}
  <div class='navigation-logo-wrapper' style={{navWidth}} data-logo={{renderLogo}}>
    {{#if renderSidebar}}
      {{ui-button icon='ui-16px-2_menu-34' color='transparent' data-theme=data-theme class='sidebar-button' active = (if (eq navSlideStatus.data-slide 'left') 'active') click=(action 'handleToggleSlide' slideId 'left')}}
    {{/if}}
    {{#if renderLogo}}
      {{#link-to routeName class="navigation-logo"}}
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width='100%' height='100%' viewBox="0 0 {{svgWidth}} {{svgHeight}}" preserveAspectRatio="xMidYMax meet">
          {{xlink}}
        </svg>
      {{/link-to}}
    {{/if}}
    {{#if imgLogo}}
      <img local-class='img-logo' src={{imgLogo}}>
    {{/if}}
  </div>
{{/if}}

{{yield}}

{{#if renderSidebarRight}}
  {{ui-button icon='ui-16px-2_menu-34' color='transparent' class='sidebar-right-button' active = (if (eq navSlideStatus.data-slide 'right') 'active') click=(action 'handleToggleSlide' slideId 'right')}}
{{/if}}
